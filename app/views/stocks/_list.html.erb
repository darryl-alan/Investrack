<table class="table table-striped">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Name</th>
      <th>Price</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |s| %>
      <tr>
        <td><%= s.code %></td>
        <td><%= s.name %></td>
        <td><%= s.price %></td>
        <% if @user.id == current_user.id %>
          <td><%= link_to "Delete Stock", 
		  				user_stock_path(s), 
						data: {confirm: "Are you sure?"}, 
						method: :delete, 
						class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
